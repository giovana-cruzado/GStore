using Microsoft.AspNetCore.Components;
using Microsoft.AspNetCore.Mvc;

@model GStore.ViewModels.RegistroVM
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="row justify-content-center my-3">
        <h1 class="display-5 text-center">GStore</h1>
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text text-center font-weight-light my-4">Criação da Conta</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Registro" method="post" enctype="multipart/form-data"></form>
                    <div asp-validation-summary="ModelOnly" hidden></div>
                    <div class="row">
                        <div class="col-sm-12 col-md-7">
                            <div class="form-floating mb-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>